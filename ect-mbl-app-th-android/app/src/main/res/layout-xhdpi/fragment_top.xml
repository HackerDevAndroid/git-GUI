<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="525"
    android:divider="@drawable/top_divider"
    android:showDividers="middle">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48"
        android:weightSum="2"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_9"
        android:background="@color/color_top_search_background">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="2">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:id="@+id/editKeyword"
                    android:layout_weight="8"
                    android:background="@drawable/input_text"
                    android:textSize="@dimen/dp_12"
                    android:hint="@string/top_label_input_keyword_hint"
                    android:singleLine="true"
                    android:maxLength="255"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_30" />

                <Button
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:id="@+id/buttonKeywordClear"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/search_keyword_clearselected"
                    android:layout_marginRight="@dimen/dp_5" />
            </FrameLayout>

            <Button
                android:id="@+id/buttonSearch"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/search_button_selector"
                android:layout_marginLeft="@dimen/dp_11" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="52"
        android:background="#ffffff"
        android:clickable="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textViewInformation"
            android:textColor="@color/color_top_label_information"
            android:textSize="@dimen/dp_10"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_19"
            android:paddingRight="@dimen/dp_19"
            android:background="@drawable/top_menu_info_selector"
            android:clickable="true" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="xhdpi"-->
        <!--android:id="@+id/textView12" />-->

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="425">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="57"
            android:background="@color/color_top_customer_background">

            <FrameLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="19"
                android:gravity="center"
                android:id="@+id/groupLoginState"
                android:background="@drawable/top_loginlogout_bottom_line">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="2"
                        android:gravity="center_vertical"
                        android:id="@+id/customerInfo"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:id="@+id/textViewCustomerName"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/color_text_default"
                            android:textSize="@dimen/dp_11"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginBottom="@dimen/dp_4" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:id="@+id/textViewUserName"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/color_text_default"
                            android:textSize="@dimen/dp_14"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/dp_10" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColor="@color/color_text_default"
                        android:textSize="@dimen/dp_11"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical|center_horizontal"
                        android:id="@+id/textViewCustomerCode"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/dp_13" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_38"
                            android:background="@drawable/top_login_shape"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/top_label_login"
                                android:id="@+id/textViewLoginSate"
                                android:textSize="@dimen/dp_14"
                                android:gravity="center_vertical"
                                android:layout_gravity="center"
                                android:textColor="@color/color_top_label_loginout"
                                android:textStyle="bold"
                                android:layout_marginRight="@dimen/dp_5" />

                            <ImageView
                                android:layout_width="@dimen/dp_18"
                                android:layout_height="@dimen/dp_18"
                                android:id="@+id/imageView2"
                                android:src="@drawable/top_icon_loginout"
                                android:layout_gravity="center_vertical|right"
                                android:layout_alignBottom="@+id/textViewLoginSate"
                                android:layout_toRightOf="@+id/textViewLoginSate"
                                android:layout_toEndOf="@+id/textViewLoginSate" />

                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_menu_selector" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:id="@+id/statusTapArea"
                android:layout_weight="8">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_38"
                        android:background="@drawable/top_login_shape"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_5"
                            android:text="@string/top_label_status_check"
                            android:id="@+id/textViewStatusCheck"
                            android:textSize="@dimen/dp_13"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/color_top_label_loginout"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:id="@+id/imageView3"
                            android:src="@drawable/top_icon_loginout"
                            android:layout_gravity="center_vertical|right" />

                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_menu_selector" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9">

                <jp.co.misumi.misumiecapp.widget.TextClock
                    android:id="@+id/textClock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/dp_5"
                    android:gravity="center"
                    android:layout_gravity="center" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:id="@+id/calendarTapArea">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_8">

                    <ImageView
                        android:id="@+id/ImageViewCalendarTop"
                        android:layout_width="@dimen/dp_130"
                        android:layout_height="@dimen/dp_130"
                        android:layout_weight="20"
                        android:background="@drawable/top_calendar_shape"
                        android:layout_gravity="center_horizontal" />

                    <ProgressBar
                        android:id="@+id/progressView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />
                </FrameLayout>

                <!-- 読み込み中 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_menu_selector" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:showDividers="middle"
            android:divider="@drawable/top_divider"
            android:background="@drawable/top_vertical_line">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonCategorySearch">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:src="@drawable/top_icon_menu_cat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/top_label_category_list"
                            android:textStyle="bold"
                            android:textSize="@dimen/dp_16"
                            android:textColor="@color/color_top_label_menu" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_23"
                            android:layout_height="@dimen/dp_23"
                            android:src="@drawable/top_icon_menu_arrow"
                            android:layout_gravity="center_vertical"
                            android:focusableInTouchMode="false" />
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_menu_selector" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonMyParts">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:src="@drawable/top_icon_menu_fav" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/top_label_my_parts"
                            android:textStyle="bold"
                            android:textSize="@dimen/dp_16"
                            android:textColor="@color/color_top_label_menu" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:src="@drawable/top_icon_menu_arrow"
                        android:layout_gravity="center_vertical"
                        android:focusableInTouchMode="false" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_menu_selector" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonEstimateHistory">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:src="@drawable/top_icon_menu_his" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/top_label_estimate_history"
                            android:textStyle="bold"
                            android:textSize="@dimen/dp_16"
                            android:textColor="@color/color_top_label_menu" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:src="@drawable/top_icon_menu_arrow"
                        android:layout_gravity="center_vertical"
                        android:focusableInTouchMode="false" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_menu_selector" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonOrderHistory">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:src="@drawable/top_icon_menu_his" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/top_label_order_history"
                            android:textStyle="bold"
                            android:textSize="@dimen/dp_16"
                            android:textColor="@color/color_top_label_menu" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:src="@drawable/top_icon_menu_arrow"
                        android:layout_gravity="center_vertical"
                        android:focusableInTouchMode="false" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_menu_selector" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonGuide">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:src="@drawable/top_icon_menu_gui" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/top_label_guide"
                            android:textStyle="bold"
                            android:textSize="@dimen/dp_16"
                            android:textColor="@color/color_top_label_menu" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:src="@drawable/top_icon_menu_arrow"
                        android:layout_gravity="center_vertical"
                        android:focusableInTouchMode="false" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_menu_selector" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>