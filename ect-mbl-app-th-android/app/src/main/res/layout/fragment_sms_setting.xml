<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background_FF"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            style="@style/DefaultText"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/menu_label_sms_setting"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold" />

        <TextView
            style="@style/DefaultText"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/sms_setting_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="33">

            <TextView
                style="@style/DefaultText"
                android:layout_width="0dp"
                android:layout_weight="14"
                android:text="@string/send_sms" />

            <Spinner
                android:id="@+id/send_sms_spinner"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="19"
                android:background="@drawable/input_background_selector" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="33">

            <TextView
                style="@style/DefaultText"
                android:layout_width="0dp"
                android:layout_weight="14"
                android:paddingBottom="@dimen/padding_15dp"
                android:paddingTop="@dimen/padding_15dp"
                android:text="@string/sms_phone_number" />

            <EditText
                android:id="@+id/phoneEdt"
                style="@style/DefaultText"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="19"
                android:background="@drawable/input_background_selector"
                android:gravity="center_vertical"
                android:hint="@string/sms_phone_number"
                android:inputType="phone"
                android:maxLines="1" />
        </LinearLayout>

        <TextView
            style="@style/DefaultText"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/sms_sending_time" />

        <CheckBox
            android:id="@+id/chkFinishOrder"
            style="@style/DefaultText"
            android:text="@string/sms_finish_order" />

        <CheckBox
            android:id="@+id/chkFinishExport"
            style="@style/DefaultText"
            android:text="@string/sms_finish_export" />

        <CheckBox
            android:id="@+id/chkFinishChange"
            style="@style/DefaultText"
            android:text="@string/sms_finish_change" />

        <TextView
            style="@style/DefaultText"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/sms_time_range" />

        <RadioGroup
            android:id="@+id/timeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/noSettingRadioBtn"
                style="@style/DefaultText"
                android:checked="true"
                android:text="@string/sms_no_setting_time_range" />

            <RadioButton
                android:id="@+id/settingRadioBtn"
                style="@style/DefaultText"
                android:text="@string/sms_setting_time_range" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="33">

            <TextView
                style="@style/DefaultText"
                android:layout_width="0dp"
                android:layout_weight="14"
                android:paddingBottom="@dimen/padding_15dp"
                android:paddingTop="@dimen/padding_15dp" />

            <Spinner
                android:id="@+id/sendingTimeSpinner"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="19"
                android:background="@drawable/input_background_selector" />

        </LinearLayout>

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/dialog_button_selecter"
            android:enabled="false"
            android:text="@string/done"
            android:textColor="@color/color_text_default"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>