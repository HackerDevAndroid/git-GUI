<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/list_item_frame_1dp"
    android:weightSum="33">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_15dp"
        android:layout_weight="14"
        android:gravity="center_vertical"
        android:background="@color/color_background_D2">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=""
            android:textSize="@dimen/font_body_12dp"
            android:textColor="@color/color_text_black_00" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=""
            android:textSize="@dimen/font_body_red_15dp"
            android:textColor="@color/color_text_red_DD"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_list_divider_9C" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"

        android:layout_weight="19"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_35dp"
            android:gravity="center_vertical"

            android:text=""
            android:textSize="@dimen/font_body_12dp"
            android:textColor="@color/color_text_black_00"
            android:maxLines="1"
            android:inputType="text"
            android:background="@drawable/input_text_quantity" />

    </LinearLayout>

</LinearLayout>
