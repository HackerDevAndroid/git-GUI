<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF">


    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_list_divider_89" />


    <LinearLayout
        android:id="@+id/layoutTapItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:orientation="vertical"
        android:background="@drawable/list_item_bg_selector">

        <!-- 普通エリア -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <!-- 商品画像エリア -->
            <FrameLayout
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_96">

                <!-- 画像本体 -->
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />

                <!-- 読み込み中 -->
                <ProgressBar
                    android:id="@+id/progressView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <!-- 枠線 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/text_frame_image_view_1dp_9c" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPartNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_text_default" />


                <TextView
                    android:id="@+id/textProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_text_default" />


                <TextView
                    android:id="@+id/textMakerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_12"
                    android:textColor="@color/color_text_default"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:scrollHorizontally="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_12" />

            </LinearLayout>

            <!-- 画面遷移＞マーク -->
            <ImageView
                android:id="@+id/viewNext"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_gravity="center_vertical"
                android:src="@drawable/image_next_arrorw_move_white"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_parts_quantity_main"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/color_text_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textQuantity"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/color_text_black_00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textPerPack"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/color_text_default" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/buttonAddCart"
            android:background="@drawable/button_orange_view_selector">

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/btn_icon_cart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_parts_add_card"
                android:textColor="@color/color_myparts_addcart_btn_font"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- 構成部品 -->
        <LinearLayout
            android:id="@+id/layoutModule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_list_frame_gray_A7" />

            <LinearLayout
                android:id="@+id/layoutSlideTrigger"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_list_frame_gray_A7" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="@string/my_parts_module_label"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_text_default"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:id="@+id/textModuleTab" />

                <ImageView
                    android:id="@+id/imageSlideSwitch"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_11"
                    android:src="@drawable/slide_switch_image_selector"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:adjustViewBounds="false"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="@dimen/dp_10" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_list_frame_gray_A7" />

            </LinearLayout>

            <!-- 構成部品を追加する -->
            <LinearLayout
                android:id="@+id/layoutSubItemList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_list_frame_gray_A7" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>