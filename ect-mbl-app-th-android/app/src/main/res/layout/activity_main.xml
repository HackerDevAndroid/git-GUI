<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/body"
            tools:layout="@layout/fragment_main"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/layout_line"
            android:id="@+id/searchBarLayout"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:id="@+id/editKeyword"
                        android:layout_weight="8"
                        android:background="@drawable/input_text"
                        android:textSize="12dp"
                        android:hint="@string/top_label_input_keyword_hint"
                        android:singleLine="true"
                        android:maxLength="255"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_30" />

                    <Button
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:id="@+id/buttonKeywordClear"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/search_keyword_clearselected"
                        android:layout_marginRight="@dimen/dp_5" />
                </FrameLayout>

                <Button
                    android:id="@+id/buttonSearch"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/search_button_selector"
                    android:layout_marginLeft="@dimen/dp_11" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


    <include layout="@layout/side_menu" />

</android.support.v4.widget.DrawerLayout>