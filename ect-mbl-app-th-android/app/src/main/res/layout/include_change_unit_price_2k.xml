<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_2dp"
    android:paddingBottom="@dimen/padding_2dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="@dimen/image_error_icon_14dp"
        android:layout_height="@dimen/image_error_icon_14dp"
        android:background="@drawable/icon_change_r" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_2"

        android:text="@string/cart_item_campaign_2"
        android:textSize="@dimen/font_error_10dp"
        android:textColor="@color/color_text_default"
        android:id="@+id/textMessage" />

</LinearLayout>
