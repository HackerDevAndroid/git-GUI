<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_frame_1dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/list_item_bg_selector">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_5dp"
            android:paddingBottom="@dimen/padding_5dp"
            android:gravity="center"

            android:textColor="@color/color_text_black_33"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold"
            android:background="@color/color_background_CC"
            android:id="@+id/textView1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_list_divider_9C" />

        <!-- お知らせ表示エリア -->
        <LinearLayout
            android:id="@+id/layoutError"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="@dimen/padding_10dp"
            android:paddingLeft="@dimen/padding_15dp"
            android:paddingRight="@dimen/padding_15dp">

            <!-- お知らせを追加する -->
            <LinearLayout
                android:id="@+id/layoutSubItemList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingBottom="@dimen/dp_4"
                android:orientation="vertical"
                android:background="@color/color_background_caution" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15dp"

            android:orientation="vertical">

            <include
                layout="@layout/include_item_text_sub_cart"
                android:id="@+id/expressType" />

            <include
                layout="@layout/include_item_text_sub_cart"
                android:id="@+id/daysToShip" />

            <include
                layout="@layout/include_item_text_sub_cart"
                android:id="@+id/expressDeadline" />

            <include
                layout="@layout/include_item_text_sub_cart"
                android:id="@+id/charge" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_38dp"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:layout_gravity="center_vertical"

                android:text="@string/order_confirm_directship_select"
                android:textSize="@dimen/font_button_type2_12dp"
                android:textColor="@color/text_color_select"
                android:textStyle="bold"
                android:background="@drawable/button_selector_select"
                android:id="@+id/textView3" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
