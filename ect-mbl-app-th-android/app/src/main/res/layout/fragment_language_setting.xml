<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background_FF"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            style="@style/DefaultText"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/language_setting_screen_label"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold" />

        <TextView
            style="@style/DefaultText"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_20"
            android:text="@string/select_your_language" />

        <RadioGroup
            android:id="@+id/languageRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10">

            <RadioButton
                android:id="@+id/defaultRadioBtn"
                style="@style/DefaultText"
                android:layout_width="match_parent"
                android:checked="true"
                android:text="@string/thailand_language" />

            <RadioButton
                android:id="@+id/englishRadioBtn"
                style="@style/DefaultText"
                android:layout_width="match_parent"
                android:text="@string/england_language" />
        </RadioGroup>

        <Button
            android:id="@+id/complete_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/dialog_button_selecter"
            android:text="@string/done"
            android:textColor="#FFF"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>