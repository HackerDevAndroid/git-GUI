<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    android:gravity="center_vertical"
    android:background="@drawable/list_frame_1dp_tab">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textSize="16dp"
        android:textColor="#000"
        android:id="@+id/textView1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_weight="1"
        android:id="@+id/textView2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/dialog_close_selecter"
        android:layout_marginLeft="@dimen/dp_15">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/pattern_number_deletebtn_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/part_number_select_reset_value"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold"
            android:textColor="@color/color_text_default" />
    </LinearLayout>

