<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_background_FF"
    android:gravity="center">

    <!--パソコンで見てね-->
    <TextView
        android:id="@+id/textOverItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:text="@string/common_footer_look_pc"
        android:textSize="@dimen/dp_12"
        android:textStyle="bold"
        android:textColor="@color/color_text_default"
        android:gravity="center"
        android:background="@drawable/text_frame_black_1dp_p0"
        android:visibility="gone" />

    <!--エラー-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textError">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/error"
                android:padding="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:textColor="@color/color_error_frame_red_DD"
                android:text="@string/common_footer_error_progress"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/list_item_selector" />

    </FrameLayout>


    <!--プログレス-->
    <ProgressBar
        android:id="@+id/viewProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:gravity="center_vertical" />

</LinearLayout>
