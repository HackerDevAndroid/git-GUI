<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutSlideTrigger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        android:background="@drawable/list_item_bg_selector_ee">

        <TextView
            android:id="@+id/textSlideSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"

            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_text_default"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageSlideSwitch"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_11"

            android:src="@drawable/slide_switch_image_selector"
            android:adjustViewBounds="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSlideContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"

        android:orientation="vertical" />

    <!-- 区切り点線 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_item_divider_dash_9c_1dp" />

</LinearLayout>
