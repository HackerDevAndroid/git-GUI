<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true" android:drawable="@drawable/login_close_selected">
        <shape android:shape="rectangle">
            <solid android:color="#0000" />
            <stroke android:width="2dp" android:color="#888" />
        </shape>
    </item>

    <item android:state_enabled="false" android:drawable="@drawable/login_close_selected">
        <shape android:shape="rectangle">
            <solid android:color="#0000" />
            <stroke android:width="2dp" android:color="#888" />
        </shape>
    </item>

    <item android:state_pressed="true" android:drawable="@drawable/login_btn_selected">
        <shape android:shape="rectangle">

            <padding android:left="12dp" android:top="4dp" android:right="12dp" android:bottom="4dp" />

            <stroke android:width="2dp" android:color="#888" />
        </shape>
    </item>

    <item android:drawable="@drawable/login_btn_normal">
        <shape android:shape="rectangle">

            <padding android:left="12dp" android:top="4dp" android:right="12dp" android:bottom="4dp" />

            <stroke android:width="2dp" android:color="#888" />
        </shape>
    </item>

</selector>
