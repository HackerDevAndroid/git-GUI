<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lifetime.androidfragment.MainActivity">

    <fragment
        android:id="@+id/top_fragment"
        android:name="lifetime.androidfragment.TopFragment"
        android:layout_width="fill_parent"

        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <fragment
        android:id="@+id/bottom_fragment"
        android:name="lifetime.androidfragment.BottomFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/top_fragment"
        android:layout_alignEnd="@+id/top_fragment"
        android:layout_below="@+id/top_fragment" />

</RelativeLayout>
