<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_FF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/color_background_EE"
        android:text="@string/deviceinfo_label_title"
        android:textSize="@dimen/dp_14"
        android:textStyle="bold"
        android:textColor="@color/color_text_default"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/text_frame_black_1dp_deviceinfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:divider="@drawable/menu_border_line"
            android:showDividers="beginning|end|middle">

            <include layout="@layout/include_item_text_device_info"
                android:id="@+id/OSversion" />
            <include layout="@layout/include_item_text_device_info"
                android:id="@+id/devicename" />
            <include layout="@layout/include_item_text_device_info"
                android:id="@+id/appversion" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="@string/deviceinfo_label_copy"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold"
        android:textColor="@color/color_text_default"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dialog_close_selecter"/>
