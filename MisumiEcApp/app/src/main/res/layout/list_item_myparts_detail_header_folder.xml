<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
	>

    <LinearLayout
        android:id="@+id/layoutSlideTrigger"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:paddingLeft="@dimen/dp_15"
		android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:background="@drawable/list_frame_1dp_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/my_parts_folder_label"
	        android:textSize="@dimen/dp_15"
		    android:textColor="@color/color_text_default"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="2"
            android:id="@+id/textSlideSwitch" />

        <ImageView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/imageSlideSwitch"
            android:src="@drawable/slide_switch_image_selector"
            android:layout_marginLeft="@dimen/dp_12"
            android:adjustViewBounds="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/layoutSlideContents"
        android:background="@color/color_myparts_category_background"/>

	<View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/color_background_F1"/>

</LinearLayout>
