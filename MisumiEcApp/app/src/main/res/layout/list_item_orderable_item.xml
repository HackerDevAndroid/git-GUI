<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_marginRight="@dimen/dp_30"
	    android:layout_marginLeft="@dimen/dp_30"
		android:background="@drawable/list_item_frame_1dp"
        android:orientation="vertical">



    <!-- お知らせ表示エリア include_item_stock_err.xml -->
    <LinearLayout
        android:id="@+id/layoutError"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

		<!-- お知らせを追加する -->
		<LinearLayout
			android:id="@+id/layoutSubItemList"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:paddingLeft="@dimen/padding_15dp"
	        android:paddingRight="@dimen/padding_15dp"
		    android:orientation="vertical"
			/>

		<View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/dp_1"
			android:background="@drawable/list_item_divider"
			/>

	</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:orientation="vertical">

        <TextView
            android:id="@+id/orderDetailPartNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dp_12"
            android:textColor="@color/color_detail_part_number"
            />


        <TextView
            android:id="@+id/orderDetailProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_detail_product_name" />


        <TextView
            android:id="@+id/orderDetailBrandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text=""
            android:textSize="@dimen/dp_12"
            android:textColor="@color/color_text_black_00"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            />

        <include layout="@layout/include_item_text_sub_confirm"
            android:id="@+id/unitPrice" />

        <include layout="@layout/include_item_text_sub_confirm"
            android:id="@+id/quantity" />

        <include layout="@layout/include_item_text_sub_confirm"
            android:id="@+id/daysToShip" />

        <include layout="@layout/include_item_text_sub_confirm"
            android:id="@+id/expressType" />

        </LinearLayout>

        <View
			android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/list_item_divider_dash_9c_1dp"
            />

        <LinearLayout
			android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingLeft="@dimen/padding_15dp"
            android:paddingRight="@dimen/padding_15dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_subtotal_main"
                    android:textSize="@dimen/font_title_15dp"
                    android:textColor="@color/color_text_default"
                    />

                <TextView
                    android:id="@+id/textSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/font_title_15dp"
                    android:textColor="@color/color_text_default"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutSubtotalWithTax"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_subtotal_main_wtax"
                    android:textSize="@dimen/font_title_15dp"
                    android:textColor="@color/color_text_default"
                    />

                <TextView
                    android:id="@+id/textSubtotalWithTax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/font_title_15dp"
                    android:textColor="@color/color_text_default"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>
