<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30"
    android:gravity="center"

    tools:context=".Login"
    android:background="#8000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_frame_2dp"
    	android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_15">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:text="@string/login_label_title"
                android:textColor="@color/color_login_title_text"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:background="@color/color_login_title_background"
                android:paddingLeft="@dimen/dp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_string"
                android:id="@+id/textViewMessage"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/color_text_default" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/errorInfoArea"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@color/color_login_label_err_background"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_string"
                    android:id="@+id/textViewError"
                    android:textSize="@dimen/dp_10"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_text_default" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_label_login_id"
                android:textColor="@color/color_text_default"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:textSize="@dimen/dp_14"
                android:textColor="#000"
                android:id="@+id/editUserId"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/input_text"
                android:inputType="textNoSuggestions"
                android:hint="@string/login_label_hint_login_id"
                android:maxLength="50"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_label_password"
                android:textColor="@color/color_text_default"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:textSize="@dimen/dp_14"
                android:textColor="#000"
                android:id="@+id/editPassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/input_text"
                android:hint="@string/login_label_hint_password"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:maxLength="8"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_5"
                android:inputType="textWebPassword" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_label_check_input_omit"
                android:textSize="@dimen/dp_16"
                android:id="@+id/checkInputOmit"
                android:textColor="@color/color_text_default"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10" />

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/login_button_selecter"
                android:id="@+id/buttonLogin"
                android:clickable="true"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_button_label_login"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_icon_lbtn_w"
                    android:layout_gravity="right|center_vertical" />
            </FrameLayout>

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/login_close_selecter"
                android:id="@+id/buttonClose"
                android:clickable="true"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_button_label_close"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="bold"
                    android:textColor="@color/color_text_default"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/search_keyword_clearselected"
                    android:layout_gravity="center_vertical|right" />

            </FrameLayout>

            <TextView
                android:id="@+id/textLinkPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_label_password_forget"
                android:textColor="@color/color_forget_password_text"
                android:textSize="@dimen/dp_12"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
