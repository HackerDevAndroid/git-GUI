<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
	>

    <LinearLayout
        android:id="@+id/viewVisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF"
		>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
	        android:paddingLeft="@dimen/padding_15dp"
	        android:paddingRight="@dimen/padding_15dp"
	        android:paddingTop="@dimen/padding_15dp"
	        android:paddingBottom="@dimen/padding_15dp"
		    android:background="@color/color_background_D2"
			>

			<!-- 単価の変更が～ -->
			<LinearLayout
			    android:id="@+id/viewCampaign"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="@dimen/padding_8dp"
			    android:paddingBottom="@dimen/padding_8dp"
			    android:paddingLeft="@dimen/padding_10dp"
			    android:paddingRight="@dimen/padding_10dp"
				android:layout_marginBottom="@dimen/margin_15dp"
			    android:orientation="vertical"
			    android:background="@color/color_background_caution"
				android:visibility="gone"
				>

			    <include layout="@layout/include_change_unit_price_i"
				    android:id="@+id/viewCampaign1"
					/>
			    <include layout="@layout/include_change_unit_price_1k"
				    android:id="@+id/viewCampaign2"
					/>

			</LinearLayout>

			<!-- ご注意事項 -->
		    <include layout="@layout/include_cart_caution_area"
					android:id="@+id/viewCaution" />

		</LinearLayout>


	    <LinearLayout
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="@dimen/padding_15dp"
	        android:paddingRight="@dimen/padding_15dp"
	        android:paddingTop="@dimen/padding_15dp"
			>

	        <Button
	            android:id="@+id/buttonQuote"
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/button_height_45dp"
				android:layout_marginBottom="@dimen/margin_15dp"
			    android:paddingRight="@dimen/padding_15dp"

	            android:text="@string/cart_go_estimate"
	            android:textSize="@dimen/font_button_type3_15dp"
	            android:textColor="@color/button_white_text_selector"
				android:textStyle="bold"
				android:drawableRight="@drawable/btn_icon_lbtn_g"
				android:drawablePadding="10dp"
		        android:background="@drawable/btn_bg_white_selector"
	            />

	        <Button
	            android:id="@+id/buttonOrder"
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/button_height_45dp"
				android:layout_marginBottom="@dimen/margin_15dp"
			    android:paddingRight="@dimen/padding_15dp"

	            android:text="@string/cart_go_order"
	            android:textSize="@dimen/font_button_type3_15dp"
				android:textColor="@color/button_orange_text_selector"
				android:textStyle="bold"
				android:drawableRight="@drawable/btn_icon_lbtn_w"
		        android:background="@drawable/btn_bg_orange_selector"
	            />

			<!--ADD NT-LWL 17/05/19 Share FR-->
			<LinearLayout
				android:id="@+id/share_cart"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_45"
				android:layout_gravity="center"
				android:layout_marginBottom="@dimen/margin_15dp"
				android:orientation="horizontal"
				android:gravity="center"
				android:visibility="gone"
				android:background="@drawable/valuebtn_selector">
				<ImageView
					android:layout_width="@dimen/dp_18"
					android:layout_height="@dimen/dp_15"
					android:layout_marginRight="@dimen/dp_5"
					android:background="@drawable/share_icon_selector"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="@dimen/dp_45"
					android:textSize="@dimen/dp_14"
					android:textStyle="bold"
					android:gravity="center"
					android:textColor="@color/share_text_color_select"
					android:text="@string/share_click_text"/>
			</LinearLayout>
			<!--ADD NT-LWL 17/05/19 Share TO-->
	    </LinearLayout>

		<View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
			android:background="@color/color_list_divider_9C"
			/>

	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="@dimen/padding_15dp"
	        android:paddingRight="@dimen/padding_15dp"
			>

			<jp.co.misumi.misumiecapp.widget.CheckBoxEx
				android:id="@+id/checkAll"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="@dimen/padding_10dp"
		        android:paddingBottom="@dimen/padding_10dp"

		        android:text="@string/cart_select_all"
	            android:textSize="@dimen/font_checkbox_13dp"
			    android:textColor="@color/color_text_default"
				/>

	    </LinearLayout>

	</LinearLayout>


	<!-- 区切り 15dp -->
	<View
	    android:layout_width="match_parent"
	    android:layout_height="15dp"
		android:background="@color/color_list_divider_D2"
		/>

</LinearLayout>
