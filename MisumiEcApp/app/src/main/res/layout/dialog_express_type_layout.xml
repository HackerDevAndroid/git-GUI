<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:background="@color/color_screen_title_background"
        android:text="@string/order_confirm_express_type_select_title"
        android:textColor="@color/color_text_black_33"
        android:textSize="@dimen/dp_15"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
		        android:id="@+id/textConfirmExpress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:text="@string/order_confirm_express_type_select_info"
                android:textColor="@color/color_text_black_33"
                android:textSize="@dimen/dp_15"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:text="@string/order_confirm_express_type_label"
                android:textColor="@color/color_text_black_33"
                android:textSize="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_15"
        		/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/color_list_divider_9C"
                />

			<!-- 動的に追加する -->
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
			    android:orientation="vertical"
				android:id="@+id/itemListLayout"
				/>

			<!-- フッター -->
            <TextView
		        android:id="@+id/textLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:text=""
                android:textColor="@color/color_text_black_33"
                android:textSize="@dimen/dp_14"
        		/>

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
		        android:padding="@dimen/padding_15dp"
		        android:background="@color/color_background_EE"
	            android:orientation="vertical">

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/confirm_express_type_caution_label"
	                android:textColor="@color/color_text_red_DD"
	                android:textSize="@dimen/dp_10"
					android:textStyle="bold"
	                />


			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
					android:id="@+id/confirm_express_tip"
			        android:text="@string/confirm_express_type_caution"
			        android:textSize="@dimen/font_error_10dp"
			        android:textColor="@color/color_text_red_DD"
					android:background="@drawable/text_frame_red_2dp"
					/>

			</LinearLayout>

		</LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
