<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_EE"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_10dp"
            android:paddingBottom="@dimen/padding_10dp"
            android:orientation="vertical">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingLeft="@dimen/padding_15dp"
                android:paddingRight="@dimen/padding_15dp"
                >


                <TextView
                    android:id="@+id/textDeadlineInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_15dp"
                    android:paddingRight="@dimen/padding_15dp"
                    android:paddingTop="@dimen/padding_15dp"
                    android:paddingBottom="@dimen/padding_15dp"
                    android:text="@string/order_detail_deadline_info4"
                    android:textSize="@dimen/font_error_10dp"
                    android:textColor="@color/color_text_red_DD"
                    android:textStyle="bold"
                    android:background="@drawable/view_error_frame_1dp"
                    android:layout_marginBottom="@dimen/margin_15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/order_complete_info_title"
                    android:textColor="@color/color_text_default"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_5"

                    android:background="@color/color_list_divider_9C"
                    />

                <include layout="@layout/include_item_text_14_19v"
                    android:id="@+id/receiverName" />

                <include layout="@layout/include_item_text_14_19v"
                    android:id="@+id/address" />

                <include layout="@layout/include_item_text_14_19v"
                    android:id="@+id/phone" />

                <include layout="@layout/include_item_text_14_19v"
                    android:id="@+id/totalPrice" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_15dp"

                    android:text="@string/order_pay_choose_type"
                    android:textColor="@color/color_text_default"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_15" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_5"

                android:background="@color/color_list_divider_9C"
                />
            <!--<ListView
                android:id="@+id/lv_pay_type_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_background_FF"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp">
                <RadioButton
                    android:layout_gravity="center"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="91dp"
                    android:layout_height="32dp"
                    android:src="@drawable/bg_alipay_logo"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/color_list_divider_9C"
                />

            <Button
                android:id="@+id/buttonPay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_45dp"
                android:layout_marginBottom="@dimen/margin_15dp"
                android:paddingRight="@dimen/padding_15dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_15dp"

                android:text="@string/order_pay_go_to_pay"
                android:textSize="@dimen/font_button_type3_15dp"
                android:textColor="@color/button_orange_text_selector"
                android:textStyle="bold"
                android:drawableRight="@drawable/btn_icon_lbtn_w"
                android:background="@drawable/btn_bg_orange_selector"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
