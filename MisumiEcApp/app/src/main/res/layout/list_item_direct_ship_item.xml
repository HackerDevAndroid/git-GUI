<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_frame_1dp"
	>



    <LinearLayout
		android:paddingTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
		android:background="@drawable/list_item_bg_selector"
	    >

	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
	        android:text=""
	        android:id="@+id/textView2" />

        <ImageView
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/flash_up_ok"
            android:layout_gravity="top|right"
			android:layout_marginRight="@dimen/dp_15"
			android:layout_marginBottom="@dimen/dp_7"
            android:id="@+id/iv_flash_status"
            />
	    <Button
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center"
	        android:text="@string/order_confirm_directship_select"
			android:textStyle="bold"
	        android:textColor="@color/text_color_select"
		    android:background="@drawable/button_selector_select"
	        android:id="@+id/textView3"/>

    </LinearLayout>

</FrameLayout>
