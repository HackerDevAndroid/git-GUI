<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:background="#FFF"
	>


<View
    android:id="@+id/viewSelectBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/list_item_bg_selector"
	/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	>

	<!-- お知らせ表示エリア -->
    <LinearLayout
        android:id="@+id/layoutError"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:paddingLeft="@dimen/padding_15dp"
		android:paddingRight="@dimen/padding_15dp"
		>

		<!--お知らせを追加する -->
		<LinearLayout
			android:id="@+id/layoutSubItemList"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
			android:paddingTop="@dimen/dp_10"
		    android:orientation="vertical"
			android:background="@color/color_background_annotation_r"
			/>

	</LinearLayout>



	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		>

	    <LinearLayout
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			>


			<!-- 普通エリア -->
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
				android:orientation="vertical"
				>


		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
			    android:orientation="horizontal"
				>



                <jp.co.misumi.misumiecapp.widget.CheckBoxEx
                    android:id="@+id/checkBox"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/padding_15dp"
                    android:layout_gravity="center"
                    />


				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:background="@drawable/list_item_bg_selector"
					android:id="@+id/layoutTapItem"
					android:paddingRight="@dimen/padding_15dp">

		    <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
				android:paddingBottom="@dimen/dp_15"
		        android:orientation="vertical"
				>


				<!-- 上半分エリア -->
				<LinearLayout
				    android:orientation="horizontal"
				    android:layout_width="match_parent"
                    android:paddingRight="@dimen/dp_15"
				    android:layout_height="wrap_content"
					android:paddingTop="@dimen/padding_15dp"
					>

					<!-- 商品画像エリア -->
		            <FrameLayout
				        android:layout_width="@dimen/image_quote_detail_92dp"
				        android:layout_height="@dimen/image_quote_detail_92dp"
		                android:background="#FFF">


						<!-- 画像本体 -->
					    <ImageView
					        android:id="@+id/imageView"
					        android:layout_width="match_parent"
					        android:layout_height="match_parent"
					        android:adjustViewBounds="true"
			                android:layout_gravity="center"
					        android:scaleType="fitCenter" />

						<!-- 読み込み中 -->
				        <ProgressBar
				            android:id="@+id/progressView"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
			                android:layout_gravity="center"
							/>

						<!-- 枠線 -->
					    <View
					        android:layout_width="match_parent"
					        android:layout_height="match_parent"
			                android:layout_gravity="center"
							android:background="@drawable/text_frame_image_view_1dp_9c"/>

		            </FrameLayout>

					<LinearLayout
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight="1"
			            android:paddingLeft="@dimen/dp_15"
					    android:orientation="vertical"
						>

		                <TextView
		                    android:id="@+id/textPartNumber"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:text=""
		                    android:textSize="@dimen/dp_12"
		                    android:textColor="@color/color_detail_part_number"
							/>


		                <TextView
		                    android:id="@+id/textProductName"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:text=""
		                    android:textStyle="bold"
		                    android:textSize="@dimen/dp_15"
		                    android:textColor="@color/color_detail_product_name" />


		                <TextView
		                    android:id="@+id/textMakerName"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:text=""
		                    android:textSize="@dimen/dp_12"
						    android:textColor="@color/color_text_black_00"
					        android:maxLines="1"
					        android:ellipsize="end"
							android:scrollHorizontally="true"
							/>

					</LinearLayout>

				</LinearLayout>




				<!-- 下半分エリア -->
				<View
				    android:layout_width="0dp"
				    android:layout_height="@dimen/padding_15dp"
					/>

                <TextView
                    android:id="@+id/textSale"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_7"
                    android:text=""
                    android:textSize="@dimen/dp_10"
		            android:padding="0dp"
                    android:background="@drawable/text_frame_red_fill"
                    android:gravity="center"
                    android:textColor="@color/color_text_white" />

				<LinearLayout
				    android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
					>

		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/quote_hist_detail_unit_price_main"
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						/>

		            <TextView
		                android:id="@+id/textUnitPrice"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=""
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						android:gravity="center_vertical" />

				</LinearLayout>



				<LinearLayout
				    android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
					>

		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/quote_hist_detail_quantity_main"
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						/>

		            <TextView
		                android:id="@+id/textQuantity"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=""
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						/>

		            <TextView
		                android:id="@+id/textPerPack"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=""
		                android:textSize="@dimen/dp_10"
					    android:textColor="@color/color_text_default"
						/>

				</LinearLayout>

				<LinearLayout
				    android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
					>

		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/quote_hist_detail_shipdate_main"
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						/>

		            <TextView
		                android:id="@+id/textShipdate"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=""
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						/>

				</LinearLayout>

				<LinearLayout
				    android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
					>

		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/quote_hist_detail_emarg_main"
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						android:visibility="gone"
						/>

		            <TextView
		                android:id="@+id/textEmerg"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=""
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						/>

				</LinearLayout>

				<LinearLayout
				    android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
					>

		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/quote_hist_detail_status_main"
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						/>

		            <TextView
		                android:id="@+id/textStatus"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=""
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						/>

				</LinearLayout>

				</LinearLayout>


					<!-- 画面遷移＞マーク -->
			        <ImageView
			            android:id="@+id/viewNext"
				        android:layout_width="@dimen/dp_11"
				        android:layout_height="wrap_content"
		                android:layout_gravity="center_vertical"
			            android:src="@drawable/icon_item_arrow"
			            android:adjustViewBounds="true"
			            android:scaleType="fitCenter" />

				</LinearLayout>
			</LinearLayout>


				<!-- 区切り点線 -->
				<View
	                android:layout_width="match_parent"
	                android:layout_height="1dp"
			        android:layout_marginLeft="@dimen/dp_50"
					android:layout_marginRight="@dimen/dp_15"
			        android:background="@drawable/list_item_divider_dash_9c"
					/>


				<LinearLayout
				    android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
					android:paddingTop="@dimen/padding_15dp"
	                android:gravity="right"
					android:paddingRight="@dimen/padding_15dp">

		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/quote_hist_detail_subtotal_main"
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						/>

		            <TextView
		                android:id="@+id/textSubtotal"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=""
				        android:textSize="@dimen/font_body_12dp"
					    android:textColor="@color/color_text_default"
						/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="@dimen/padding_15dp"
					android:gravity="right"
                    android:id="@+id/textSubtotalWithTaxlabel"
					android:paddingRight="@dimen/padding_15dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/quote_hist_detail_subtotal_main"
						android:textSize="@dimen/font_body_12dp"
						android:textColor="@color/color_text_default"
						/>

					<TextView
						android:id="@+id/textSubtotalWithTax"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text=""
						android:textSize="@dimen/font_body_12dp"
						android:textColor="@color/color_text_default"
						/>

				</LinearLayout>

			</LinearLayout>


			<!-- 誤タップ避けエリア -->
		    <LinearLayout
		        android:orientation="horizontal"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/dp_50"
				android:paddingRight="@dimen/padding_15dp"
				android:paddingTop="@dimen/padding_15dp"
				android:paddingBottom="@dimen/padding_15dp"

	            android:clickable="true"
	            android:focusable="true"
	            android:focusableInTouchMode="true" >

                <LinearLayout
                    android:id="@+id/buttonAddMy"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height_38dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_bg_white_selector">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/btn_icon_myparts"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/quote_hist_detail_add_my"
                        android:textColor="@color/button_white_text_selector"
                        android:textSize="@dimen/font_button_type2_12dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonAddCart"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height_38dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button_orange_view_selector">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/btn_icon_cart"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/quote_hist_detail_add_card"
                        android:textColor="@color/color_myparts_addcart_btn_font"
                        android:textSize="@dimen/font_button_type2_12dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

</FrameLayout>
