<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_marginRight="@dimen/dp_30"
	    android:layout_marginLeft="@dimen/dp_30"
		android:background="@drawable/list_item_frame_1dp"
        android:orientation="vertical">



    <!-- お知らせ表示エリア include_item_stock_err.xml -->
    <LinearLayout
        android:id="@+id/layoutError"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

		<!-- お知らせを追加する -->
		<LinearLayout
			android:id="@+id/layoutSubItemList"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:paddingLeft="@dimen/padding_15dp"
	        android:paddingRight="@dimen/padding_15dp"
		    android:orientation="vertical"
			/>

		<View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/dp_1"
			android:background="@drawable/list_item_divider"
			/>

	</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        >

        <TextView
            android:id="@+id/orderDetailPartNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/color_detail_part_number"
            />


        <TextView
            android:id="@+id/orderDetailProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_detail_product_name" />


        <TextView
            android:id="@+id/orderDetailBrandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/color_text_black_00"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            />

        <include layout="@layout/include_item_text_etc"
            android:id="@+id/earliestShipDate" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>
