<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/color_fragment_background">

	    <LinearLayout
	        android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

		    <LinearLayout
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
	            android:orientation="vertical">

		    <TextView
        		android:id="@+id/textSeriesName"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_14"
                android:textStyle="bold"
			    android:textColor="@color/color_text_default"
		        android:maxLines="1"
		        android:ellipsize="end"
				android:scrollHorizontally="true"
				/>

		    </LinearLayout>


			<!-- 選択タブ -->
		    <LinearLayout
		        android:orientation="horizontal"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/dp_33"
				android:paddingLeft="@dimen/dp_15"
				android:paddingRight="@dimen/dp_15">

			    <TextView
	        		android:id="@+id/textCondition"
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
			        android:layout_weight="1"
                    android:gravity="center"
			        android:text="@string/part_number_select_tab_condition"
			        android:textSize="@dimen/dp_12"
                    android:textStyle="bold"
				    android:textColor="@color/color_text_default"
                    android:background="@drawable/text_frame_black_1dp_tab_w"
					/>

			    <jp.co.misumi.misumiecapp.widget.AutoFitTextView
	        		android:id="@+id/textPartList"
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
			        android:layout_weight="1"
                    android:gravity="center"
			        android:text=""
			        android:textSize="@dimen/dp_12"
                    android:textStyle="bold"
				    android:textColor="@color/color_text_default"
                    android:background="@drawable/text_frame_black_1dp_tab_g"
					/>

	        </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:orientation="horizontal">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_list_divider_BD"
                    >
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:background="#FFF"
                        android:layout_weight="1"
                        android:id="@+id/tabLineLeft"
                        >
                    </View>
                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="#FFF"
                        android:layout_weight="1"
                        android:id="@+id/tabLineRight"
                        >
                    </View>
                </LinearLayout>
            </FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

			<!-- 条件エリア -->
		    <LinearLayout
        		android:id="@+id/layoutCondition"
		        android:orientation="vertical"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">

                <include layout="@layout/include_item_spec_reset"
					android:id="@+id/viewReset"/>

	        </LinearLayout>

			<!-- 型番候補エリア -->
		    <LinearLayout
        		android:id="@+id/layoutPartList"
		        android:orientation="vertical"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content">

	        </LinearLayout>
                </LinearLayout>
            </ScrollView>
            </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>
